<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_black"
    android:orientation="vertical">

    <com.jokerwan.lib.view.FitView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#373737"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#373737">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="54dp"
            android:layout_height="match_parent"
            android:paddingStart="22dp"
            android:paddingEnd="22dp"
            android:src="@drawable/ic_back_white" />

        <TextView
            android:id="@+id/tv_pic_index"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="15dp"
            android:background="@drawable/shape_green_circle_bg"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

    </FrameLayout>

    <com.jokerwan.lib.view.HackyViewPager
        android:id="@+id/vp_main_preImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/re_preImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:background="#373737"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="end"
        android:background="#373737"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_gravity="center|end"
            android:textSize="15sp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/shape_green_btn"
            android:text="发送(9)"/>

    </LinearLayout>


</LinearLayout>