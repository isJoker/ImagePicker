<?xml version="1.0" encoding="utf-8"?>
<com.jokerwan.lib.view.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/srl_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="1.5dp">

    <com.jokerwan.lib.view.SquareImageView
        android:id="@+id/iv_item_image"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/icon_image_default"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_item_check"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="9dp"
        android:gravity="center"
        android:background="@drawable/shape_circle_unselect"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/iv_item_gif"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="6dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_gif"
        android:visibility="visible" />


</com.jokerwan.lib.view.SquareRelativeLayout>